<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showDB"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="37dp"
        android:background="#FFFFFF"
        android:onClick="onShowDBButtonClick"
        android:text="Show Database"
        android:textColor="#000000"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/result"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="37dp"
        android:background="#FFFFFF"
        android:onClick="onButtonClick"
        android:text="Result"
        android:textColor="#000000"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/result2"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="37dp"
        android:background="#FFFFFF"
        android:onClick="onClearButtonClick"
        android:scrollbars="vertical"
        android:text="Clear history"
        android:textColor="#000000"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearDB"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="576dp"
        android:layout_marginEnd="37dp"
        android:background="#FFFFFF"
        android:onClick="onClearDBButtonClick"
        android:text="Clear Database"
        android:textColor="#000000"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearDB2"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="576dp"
        android:layout_marginEnd="37dp"
        android:background="#FFFFFF"
        android:onClick="onClearDBButtonClick"
        android:text="Clear Database"
        android:textColor="#000000"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x1"
        android:layout_width="47dp"
        android:layout_height="26dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="247dp"
        android:text="x^2+"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="245dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="140dp"
        android:text="x+"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x3"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="351dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="34dp"
        android:text="=0"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="57dp"
        android:layout_height="26dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="317dp"
        android:text="X1="
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNumberX1"
        android:layout_width="106dp"
        android:layout_height="26dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="211dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNumberX2"
        android:layout_width="106dp"
        android:layout_height="26dp"
        android:layout_marginStart="257dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="48dp"
        android:background="#FFFBFB"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="57dp"
        android:layout_height="26dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="154dp"
        android:text="X2="
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberX2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="167dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberX3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="271dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="60dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberX1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="294dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/history"
        android:layout_width="337dp"
        android:layout_height="300dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="37dp"
        android:background="#FFFFFF"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>