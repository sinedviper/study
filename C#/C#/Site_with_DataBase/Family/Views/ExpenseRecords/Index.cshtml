<h2>This is your expenses resords</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExpensesCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpensesRecords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
